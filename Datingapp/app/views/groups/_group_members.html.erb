<%if @group_users.length==0%>
	<h4 class="m_4">No members added yet.</h4>
	<br/>	
<%else%>
	<div class="<%=custom_class%>">		    	
	    <h4 class="recent">GROUP MEMBERS(<%=@group_users.length%>)</h4>
	    <div class="my-friend-list">
	    	<div class="row">
	    		<% @group_users.each_with_index do |group_member,counter| %>	
		        	<div class="<%=custom_class1%>">
				        <div class="well">
			                <div class="media">
			                    <a class="thumbnail pull-left" href="#">
			                    	<%=image_tag(group_member.image_path, :class=>"img-responsive", :alt=>"")%>
			                    </a>
			                    <div class="media-body">
			                        <h4 class="media-heading"><a href="<%=view_user_path(group_member)%>"><%=group_member.full_name%>
									</a></h4>
			                		<p class="run-text"><%=group_member.user_friends.find_all{|item| item.is_accepted==true}.length%> friends</p>
			                		<% if current_user.id!=group_member.id && @group_friends.include?(group_member.id)%>
				                        <p>
				                            <a href="<%=new_user_message_path%>?uid=<%= group_member.id%>" class="btn btn-xs btn-default">
				                            	<i class="fa fa-envelope-o" aria-hidden="true"></i> Mail
				                            </a>
				                            <a href="#" class="btn btn-xs btn-default start-conversation" data-sid="<%=current_user.id%>" data-rip="<%=group_member.id%>">
				                            	<i class="fa fa-comments-o" aria-hidden="true"></i> Chat
				                            </a>
				                        </p>
			                        <%end%>
			                    </div>
			                </div>
			            </div>
		            </div>		        
	        	<%end%>
	        </div>
	    </div>
	</div>
<%end%>
