<div class="content_bottom">
  <div class="container">
    <div class="box1">
       <%if my_friends.length==0%>
    	<h4>No new friends available</h4>
       <%end%>
       <% my_friends.each_with_index do |user,counter| %>
        <div class="col-md-4 wow fadeInLeft" data-wow-delay="0.4s">
          <div class="grid_4">
            <a href="#">
              <h4><span class="m_3"><a href="<%=view_user_path(user)%>"><%=user.full_name%></a></span></h4>
              <%=image_tag("/assets/pic#{(counter%9)+1}.jpg", :class=>"img-responsive", :alt=>"")%>
              <a href="#" class="btn1 btn4 btn-1 btn1-1b" onclick="addToGroup(<%=user.id%>,<%=group.id%>)">Add to Group</a>
            </a> 
          </div>
        </div>
      <%end%>
      <div class="clearfix"> </div>
    </div>
    <div class='clearfix'> </div>
  </div>
</div>